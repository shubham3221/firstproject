<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/downloadcardview"
    android:layout_marginStart="2dp"
    android:layout_marginEnd="2dp"
    android:layout_marginBottom="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_margin="4dp"
                android:scaleType="fitCenter"
                android:id="@+id/pausedl"
                android:layout_width="35dp"
                android:layout_height="35dp"
                />
            <LinearLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="2dp"
                    android:layout_gravity="top"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <TextView
                    android:visibility="visible"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:text="Title: "
                    android:textColor="@color/textcolor2"
                    /><TextView
                    android:layout_weight="10"
                    android:maxLines="1"
                    android:id="@+id/filetitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:layout_marginEnd="20dp"
                    android:textColor="@color/white"
                    />
                    <TextView
                        android:visibility="gone"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/cancelTextview"
                        android:textColor="@color/error_color_material_dark"
                        android:layout_width="wrap_content"
                        android:gravity="end"
                        android:textStyle="bold"
                        android:layout_height="wrap_content"
                        android:text="Cancel"/>
                </LinearLayout>

                <ProgressBar
                    android:progressDrawable="@drawable/custom_progress"
                    android:visibility="gone"
                    android:indeterminate="true"
                    android:indeterminateTint="@color/white"
                    android:background="@color/transparent"
                    android:progressBackgroundTint="@color/colorBackgroundSlot"
                    android:layout_marginEnd="10dp"
                    android:id="@+id/progressdl"
                    style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>

                <LinearLayout
                    android:layout_gravity="bottom"
                    android:gravity="bottom"
                    android:layout_marginBottom="2dp"
                    android:layout_marginTop="2dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:textColor="@color/textcolor2"
                        android:text="Status: "/>
                    <TextView
                        android:id="@+id/statusdl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14dp"
                        android:text="/?"/>
                    <TextView
                        android:layout_marginEnd="5dp"
                        android:id="@+id/sizedl"
                        android:layout_gravity="end|bottom"
                        android:gravity="end"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="12dp"
                        android:textColor="@color/white"
                        android:text="speed"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>



</LinearLayout>