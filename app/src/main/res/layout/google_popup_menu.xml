<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:background="@drawable/round_textview_update"
    android:backgroundTint="@color/blighcolor"
    android:orientation="vertical">

    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginStart="20dp"
        android:text="Title"
        android:id="@+id/title"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:gravity="center|start"
        />


    <TextView
        android:textColor="@color/white"
        android:id="@+id/open"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginStart="20dp"
        android:drawablePadding="15sp"
        android:gravity="center|start"
        android:text="Open"
        android:drawableTint="@color/Grey_500"
        app:drawableStartCompat="@drawable/ic_baseline_insert_drive_file_24" />

    <View
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:id="@+id/view"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/one"
        android:layout_height="1dp"
        android:layout_marginStart="60dp"
        android:background="#424242" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginStart="20dp"
        android:drawablePadding="15dp"

        android:id="@+id/download"
        android:gravity="start|center"
        android:drawableStart="@drawable/ic_baseline_arrow_downward_24"
        android:drawableTint="@color/Grey_500"
        android:text="Download"
        android:textColor="@color/white" />

    <View
        android:layout_marginEnd="20dp"
        android:layout_width="match_parent"
        android:id="@+id/view2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/one"
        android:layout_height="1dp"
        android:layout_marginStart="60dp"
        android:background="#424242" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="50dp"
        android:layout_marginStart="20dp"
        android:drawablePadding="15dp"

        android:id="@+id/properties"
        android:gravity="start|center"
        android:drawableStart="@drawable/ic_baseline_info_24"
        android:drawableTint="@color/Grey_500"
        android:text="Properties"
        android:textColor="@color/white" />


</LinearLayout>

