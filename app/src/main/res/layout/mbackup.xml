<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/firstcard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="8dp"
        android:backgroundTint="@color/text_bg_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/vid_img"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/play_button_png" />
        <ImageView
            android:id="@+id/vid_img2"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="80dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/play_button_png" />


        <ImageView
            android:id="@+id/vid_img3"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginStart="160dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/play_button_png" />

        <TextView

            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_gravity="end|center"
            android:textColor="@color/white"
            android:layout_height="match_parent"
            android:text="Server 1"
            android:textSize="18dp" />


    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/vid_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="this is the first movie base"
        android:textColor="#ffffff"
        android:textSize="12dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/firstcard" />

</androidx.constraintlayout.widget.ConstraintLayout>