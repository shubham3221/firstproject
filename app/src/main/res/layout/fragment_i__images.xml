<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_weight="0"
        android:backgroundTint="#D7282D30"
        app:cardCornerRadius="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <ImageView
            android:id="@+id/ImageviewFragmentImage"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitStart" />

        <TextView

            android:id="@+id/imagesText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|left"
            android:layout_marginStart="50dp"
            android:text="SEARCH IMAGES"
            android:textColor="@color/white"
            android:textSize="12dp" />

        <ImageView
            android:id="@+id/starimag2e"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:src="@drawable/star_png" />

        <ImageView
            android:id="@+id/starimage"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end|center"
            android:layout_margin="5dp"
            android:background="@drawable/bubble"
            android:backgroundTint="#B9BEBDBF"
            android:padding="8dp"
            android:src="@drawable/go_png" />


    </androidx.cardview.widget.CardView>
    <TextView
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/cardView"
        android:id="@+id/dailyupdates"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#B9BEBDBF"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textSize="10dp"
        android:text="Visit Daily For Latest Movies Updates!!!"
        />
</androidx.constraintlayout.widget.ConstraintLayout>



