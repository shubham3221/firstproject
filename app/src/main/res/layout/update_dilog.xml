<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:gravity="center">
    <androidx.cardview.widget.CardView
        android:background="@color/bubbleColor"
        android:id="@+id/popBG_color"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="15dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <LinearLayout
            android:background="@drawable/newbg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_marginBottom="10dp"
                android:background="@color/premiumpostcolor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="25dp"
                >
                <TextView
                    android:layout_gravity="center"
                    android:drawableStart="@drawable/update6"
                    android:layout_width="wrap_content"
                    android:id="@+id/titlePopup"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:textSize="15dp"
                    android:text=" New Update Available!"/>
            </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:text="Connecting..."
                    android:layout_margin="10dp"
                    android:id="@+id/herelink"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/colorPrimaryDark"/>
                <ProgressBar
                    android:visibility="gone"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="10dp"
                    android:layout_marginBottom="20dp"
                    android:progressDrawable="@drawable/custom_progress"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:id="@+id/progressBar1"
                    android:layout_width="match_parent"
                    android:layout_height="5dp"
                    android:progress="0"/>
                <TextView
                    android:visibility="gone"
                    android:layout_margin="5dp"
                    android:padding="5dp"
                    android:paddingStart="15dp"
                    android:paddingEnd="15dp"
                    android:text="install now"
                    android:textAllCaps="true"
                    android:id="@+id/loginbtnPopup"
                    android:layout_width="wrap_content"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content"
                    android:background="@drawable/round_textview_update"
                    android:layout_gravity="center_horizontal"/>


        </LinearLayout>
    </androidx.cardview.widget.CardView>

</RelativeLayout>