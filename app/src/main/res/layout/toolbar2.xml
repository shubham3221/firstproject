<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:id="@+id/toolbarlayout"
    android:background="@color/colorPrimaryDarker"
    android:orientation="horizontal">
    <androidx.cardview.widget.CardView
        android:id="@+id/backbtn"
        app:cardCornerRadius="20dp"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:backgroundTint="@color/lightcolor">

        <ImageView
            android:visibility="visible"
            android:id="@+id/toolimg"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center"
            android:background="@drawable/backbutton" />
    </androidx.cardview.widget.CardView>


    <ImageView
        android:layout_marginStart="5dp"
        android:id="@+id/toolimg2"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/yellow"
        android:layout_gravity="center"
        android:background="@drawable/app_title" />

        <ProgressBar
            android:visibility="gone"
            android:indeterminateDrawable="@drawable/progress_animation"
            android:id="@+id/updateProgress"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:layout_gravity="center"
            />



</LinearLayout>